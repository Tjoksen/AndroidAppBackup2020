<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true"
        >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/users_home_profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_icon"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/users_home_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User fullname"
        android:textAlignment="textStart"
        android:layout_below="@+id/users_home_profile_image"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:autoSizeTextType="uniform"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="15sp"
        />
    <TextView
        android:id="@+id/users_home_age_city_nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19,Harare, Zimbabwe"
        android:textAlignment="textStart"
        android:singleLine="true"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="15sp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/users_home_fullname"
        />
</RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>